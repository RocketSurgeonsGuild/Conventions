<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
        <PackageDescription>Adds support for loading services into dependency injection to the hosted application by convention.</PackageDescription>
        <PackageTags>$(PackageTags);di;dependency injection;ioc</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="System.Diagnostics.DiagnosticSource" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Conventions\Rocket.Surgery.Conventions.csproj" />
      <ProjectReference Include="..\DependencyInjection.Conventions.Abstractions\Rocket.Surgery.Conventions.DependencyInjection.Abstractions.csproj" />
      <ProjectReference Include="..\DependencyInjection.Extensions\Rocket.Surgery.Extensions.DependencyInjection.Extensions.csproj" />
    </ItemGroup>
</Project>
