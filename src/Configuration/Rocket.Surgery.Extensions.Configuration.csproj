<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
        <PackageDescription>Provides the ability to provide configuration to the hosted application by convention.</PackageDescription>
        <PackageTags>$(PackageTags);config;configuration</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\Conventions\Rocket.Surgery.Conventions.csproj" />
        <ProjectReference Include="..\Configuration.Abstractions\Rocket.Surgery.Extensions.Configuration.Abstractions.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration" />
        <PackageReference Include="System.Diagnostics.DiagnosticSource" />

        <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" />
        <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Ini" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
        <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" />
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
        <PackageReference Include="NetEscapades.Configuration.Yaml" />
    </ItemGroup>
</Project>
