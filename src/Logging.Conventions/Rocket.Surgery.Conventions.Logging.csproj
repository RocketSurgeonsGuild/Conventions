<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
        <PackageDescription>Adds support for adding logging to the hosted application by convention.</PackageDescription>
        <PackageTags>$(PackageTags);logging</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Configuration" />
        <PackageReference Include="System.Diagnostics.DiagnosticSource" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Conventions\Rocket.Surgery.Conventions.csproj" />
      <ProjectReference Include="..\Logging.Conventions.Abstractions\Rocket.Surgery.Conventions.Logging.Abstractions.csproj" />
      <ProjectReference Include="..\DependencyInjection.Conventions.Abstractions\Rocket.Surgery.Conventions.DependencyInjection.Abstractions.csproj" />
      <ProjectReference Include="..\Logging.Extensions\Rocket.Surgery.Extensions.Logging.Extensions.csproj" />
    </ItemGroup>
</Project>
